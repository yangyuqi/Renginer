<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_fragment_bg_color"
    android:orientation="vertical">
    <include layout="@layout/common_title_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:id="@+id/question_detail_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_fragment_bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/question_detail_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_10dp"
                android:layout_marginBottom="@dimen/margin_10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/publish_attach"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/font_size_10dp"
                    android:background="@drawable/bg_shape_enclosure"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/font_size_10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/report_icon" />

                    <TextView
                        android:id="@+id/change_detail_enclosure_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size_15dp"
                        android:textColor="@color/black_1f1f1f_color"
                        android:textSize="@dimen/font_size_16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>

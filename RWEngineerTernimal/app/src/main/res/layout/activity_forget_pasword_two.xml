<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.qxmagic.railwayengineerternimal.ui.login.ForgetPasswordTwoActivityy">

    <include layout="@layout/common_title_layout" />

    <EditText
        android:id="@+id/forget_password_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_40dp"
        android:background="@drawable/bg_shape_login_edit"
        android:drawableStart="@mipmap/login_password_icon"
        android:drawablePadding="10dp"
        android:hint="@string/login_username_hint"
        android:inputType="textPassword"
        android:paddingEnd="@dimen/margin_10dp"
        android:paddingStart="@dimen/margin_10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_9b9b9b_color"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/forget_confirm_password_edit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:background="@drawable/bg_shape_login_edit"
        android:drawablePadding="10dp"
        android:drawableStart="@mipmap/login_password_icon"
        android:hint="@string/login_username_hint"
        android:inputType="textPassword"
        android:paddingEnd="@dimen/margin_10dp"
        android:paddingStart="@dimen/margin_10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/gray_9b9b9b_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginEnd="@dimen/margin_25dp"
        android:layout_marginStart="@dimen/margin_25dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:background="@drawable/bg_shape_login_btn"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>

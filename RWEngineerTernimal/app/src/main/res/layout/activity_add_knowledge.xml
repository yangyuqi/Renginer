<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_fragment_bg_color"
    tools:context="com.qxmagic.railwayengineerternimal.ui.knowledge_base.AddKnowledgeActivity">

    <include
        android:id="@+id/add_to_knowledge_title"
        layout="@layout/common_title_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/line"
        android:layout_below="@+id/add_to_knowledge_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_knowledge_title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />

                <EditText
                    android:id="@+id/new_knowledge_title_edit"
                    android:layout_width="@dimen/_repair_pop_middle_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_10dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入标题"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_bec3c7_color"
                    android:textSize="@dimen/font_size_16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_knowledge_author"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />

                <TextView
                    android:id="@+id/new_knowledge_author_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_10dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_bec3c7_color"
                    android:textSize="@dimen/font_size_16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_knowledge_time"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />

                <LinearLayout
                    android:layout_width="@dimen/_repair_pop_middle_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/new_knowledge_date_text"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="请选择创建时间"
                        android:maxLines="1"
                        android:paddingEnd="@dimen/font_size_10dp"
                        android:paddingStart="@dimen/font_size_10dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/gray_bec3c7_color"
                        android:textSize="@dimen/font_size_16sp" />

                    <ImageView
                        android:id="@+id/new_knowledge_date_img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@null"
                        android:padding="10dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/date_choice_icon" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_knowledge_relate_question"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />


                <TextView
                    android:id="@+id/new_knowledge_question_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:textColor="@color/black_2a2a2a_color"
                    android:textSize="@dimen/font_size_16dp"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/new_knowledge_question_pop"
                    android:layout_width="@dimen/_repair_pop_middle_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/new_knowledge_question_pop_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size_10dp"
                        android:layout_weight="1"
                        android:text="@string/choice"
                        android:textColor="@color/black_2a2a2a_color"
                        android:textSize="@dimen/font_size_16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/font_size_10dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/show_popwindow_icon" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_knowledge_type"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />

                <LinearLayout
                    android:id="@+id/new_knowledge_type_pop"
                    android:layout_width="@dimen/_repair_pop_middle_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/new_knowledge_type_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size_10dp"
                        android:layout_weight="1"
                        android:text="@string/choice"
                        android:textColor="@color/black_2a2a2a_color"
                        android:textSize="@dimen/font_size_16dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/font_size_10dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/show_popwindow_icon" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/font_size_10dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/font_size_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_knowledge_description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16sp" />

                <EditText
                    android:id="@+id/custom_content_editText"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginBottom="@dimen/font_size_10dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:gravity="top|start"
                    android:hint="请输入知识描述"
                    android:padding="@dimen/font_size_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_bec3c7_color"
                    android:textSize="@dimen/font_size_16sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />
        </LinearLayout>
    </ScrollView>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_above="@+id/add_to_knowledge_layout"
        android:background="@color/gray_95a5a5_color" />

    <LinearLayout
        android:id="@+id/add_to_knowledge_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/font_size_10dp">

        <TextView
            android:id="@+id/add_to_knowledge_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_modify_password_confirmbtn_bg"
            android:gravity="center"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18sp" />
    </LinearLayout>
</RelativeLayout>

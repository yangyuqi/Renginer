<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wx_corner_dialog_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/apply_cancel_dialog_title"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:gravity="center"
            android:paddingLeft="10dip"
            android:textColor="@color/blue_2f80e7_color"
            android:textSize="16sp" />

        <View
            android:id="@+id/apply_cancel_dialog_divider_line"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/gray_95a5a5_color" />

        <TextView
            android:id="@+id/apply_cancel_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.1"
            android:minHeight="150dip"
            android:padding="10dip"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:background="@color/gray_95a5a5_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/apply_cancel_dialog_cancel"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="0.1dip"
                android:layout_height="match_parent"
                android:background="@color/gray_95a5a5_color" />

            <TextView
                android:id="@+id/apply_cancel_dialog_confirm"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/blue_2f80e7_color"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
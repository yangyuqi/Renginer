<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/repair_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qxmagic.railwayengineerternimal.ui.receptiondesk.event.change.NewChangeActivity">

    <include
        android:id="@+id/new_change_title_layout"
        layout="@layout/common_title_layout" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/new_change_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/new_change_bottom_layout"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/new_change_title_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_fragment_bg_color"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="标题："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <EditText
                    android:id="@+id/new_change_title_edit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:ellipsize="end"
                    android:hint="请输入标题"
                    android:maxLines="1"
                    android:paddingStart="@dimen/font_size_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_bec3c7_color"
                    android:textSize="@dimen/font_size_16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组织："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <TextView
                    android:id="@+id/new_change_organization_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:textColor="@color/black_2a2a2a_color"
                    android:textSize="@dimen/font_size_14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发起人："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <TextView
                    android:id="@+id/new_change_sponsor_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:textColor="@color/black_2a2a2a_color"
                    android:textSize="@dimen/font_size_14dp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关联事件："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <TextView
                    android:id="@+id/new_change_state_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="变更类型："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <LinearLayout
                    android:id="@+id/new_change_type_pop"
                    android:layout_width="@dimen/_repair_pop_small_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/new_change_type_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size_10dp"
                        android:layout_weight="1"
                        android:text="@string/choice"
                        android:textColor="@color/black_2a2a2a_color"
                        android:textSize="@dimen/font_size_14dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/font_size_10dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/show_popwindow_icon" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="父级变更："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <!--<LinearLayout-->
                    <!--android:id="@+id/new_change_parent_change_pop"-->
                    <!--android:layout_width="@dimen/_repair_pop_small_width"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginEnd="@dimen/font_size_20dp"-->
                    <!--android:layout_marginStart="@dimen/font_size_10dp"-->
                    <!--android:background="@drawable/shape_modify_password_edit_bg"-->
                    <!--android:focusable="true"-->
                    <!--android:gravity="center_vertical"-->
                    <!--android:orientation="horizontal">-->

                    <TextView
                        android:id="@+id/new_change_parent_change_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size_10dp"
                        android:textColor="@color/black_2a2a2a_color"
                        android:textSize="@dimen/font_size_16dp" />

                    <!--<ImageView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_marginEnd="@dimen/font_size_10dp"-->
                        <!--android:contentDescription="@null"-->
                        <!--android:scaleType="centerCrop"-->
                        <!--android:src="@mipmap/show_popwindow_icon" />-->
                <!--</LinearLayout>-->

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingEnd="@dimen/font_size_10dp"
                android:paddingStart="@dimen/font_size_10dp"
                android:paddingTop="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审批人："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <LinearLayout
                    android:id="@+id/new_change_approve_pop"
                    android:layout_width="@dimen/_repair_pop_middle_width"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/font_size_20dp"
                    android:layout_marginStart="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/new_change_approve_text"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/font_size_10dp"
                        android:layout_weight="1"
                        android:text="@string/choice"
                        android:textColor="@color/black_2a2a2a_color"
                        android:textSize="@dimen/font_size_14dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/font_size_10dp"
                        android:contentDescription="@null"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/show_popwindow_icon" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/font_size_15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述："
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_16dp" />

                <EditText
                    android:id="@+id/new_change_description_edit"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/font_size_10dp"
                    android:background="@drawable/shape_modify_password_edit_bg"
                    android:gravity="top|start"
                    android:hint="请输入问题描述"
                    android:padding="@dimen/font_size_10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/gray_bec3c7_color"
                    android:textSize="@dimen/font_size_16sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_95a5a5_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/font_size_10dp">

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="上传图片："-->
                <!--android:textColor="@color/black"-->
                <!--android:textSize="@dimen/font_size_16dp" />-->

                <!--<android.support.v7.widget.RecyclerView-->
                <!--android:id="@+id/new_change_images_recyclerView"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="40dp"-->
                <!--android:layout_marginTop="@dimen/font_size_10dp" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/font_size_10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="上传附件："
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16dp" />

                    <TextView
                        android:id="@+id/new_change_select_file_text"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_shape_select_file"
                        android:gravity="center"
                        android:text="选择文件"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16dp" />

                    <TextView
                        android:id="@+id/new_publish_attach_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_10dp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/new_change_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_95a5a5_color" />

        <TextView
            android:id="@+id/new_change_confirm"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_10dp"
            android:background="@drawable/shape_modify_password_confirmbtn_bg"
            android:gravity="center"
            android:text="创建"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18sp" />
    </LinearLayout>
</RelativeLayout>

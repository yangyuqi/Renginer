<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.qxmagic.railwayuserterminal.ui.service.ContractDetailActivity">

    <include layout="@layout/common_title_layout"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_fragment_bg_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/font_size_10dp"
            android:paddingEnd="@dimen/font_size_10dp"
            android:paddingStart="@dimen/font_size_10dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/contract_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_18dp" />

            <TextView
                android:id="@+id/contract_detail_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:lineSpacingMultiplier="1.5"
                android:lineSpacingExtra="5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_18dp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

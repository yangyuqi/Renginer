<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_fragment_bg_color"
    android:orientation="vertical"
    tools:context="com.qxmagic.railwayuserterminal.ui.event.repair.RepairDescriptionActivity">

    <include layout="@layout/common_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/font_size_15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/repair_description"
            android:textColor="@color/black"
            android:textSize="@dimen/font_size_16dp" />

        <EditText
            android:id="@+id/repair_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/font_size_25dp"
            android:layout_marginTop="@dimen/font_size_10dp"
            android:background="@drawable/shape_modify_password_edit_bg"
            android:gravity="top|left"
            android:hint="请填写报修描述"
            android:minHeight="200dp"
            android:padding="@dimen/font_size_15dp"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_bec3c7_color"
            android:textSize="@dimen/font_size_16dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_95a5a5_color" />

</LinearLayout>
